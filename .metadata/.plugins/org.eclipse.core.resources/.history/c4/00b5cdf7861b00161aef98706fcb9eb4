package testMine;

import java.awt.Color;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;


public class Player extends Character
{
    private int gold;

    private int bombs;

    boolean bombWait;
    
    int count = 0;//used for mining
    // X/Y param
    // speed
    // x/y vel
    // health param
    // takeHit()
    // checkHealth()


    /**
     * @param x
     *            x position
     * @param y
     *            y position
     * @param vX
     *            x velocity
     * @param vY
     *            y velocity
     * @param hitPoints
     *            hitPoints
     * @param color
     *            color
     * @param world
     *            world
     */
    public Player( double x, double y, double vX, double vY, int hitPoints, Color color, World world )
    {
        super( x, y, vX, vY, hitPoints, color, world );
        gold = 0;
        bombs = 10000;
        bombWait = false;
    }


    /**
     * TODO Write your method description here.
     * 
     * @return
     */
    public boolean alive()
    {
        return hp > 0;
    }


    /**
     *
     * @param damage
     *            damage taken
     * @return
     */
    public void takeHit( int damage )
    {

        setHP( getHP() - damage );

        if ( !alive() )
        {
            // tell World that Player is dead
            w.playerDeath( this );
        }
    }


    @Override
    public void takeDamage( int damage )
    {
        hp = hp - damage;
        if ( !alive() )
        {
            w.playerDeath( this );
        }
    }


    public void bomb()
    {
        if ( bombs > 0 && !bombWait )
        {
            bombs--;
            w.bombArea( (int)getX(), (int)getY());
            System.out.println( "Placed bomb" );
            bombWait = true;
            return;
        }
        System.out.println( "Out of bombs! Or wait a bit!" );
    }


    public void mine()
    {
        if (vY == 0 && vX == 0 )//player starts out with no direction!
        {
            System.out.println("move!");
        }
        else
        {
            
        }
    }


    public int getGold()
    {
        return gold;
    }


    public void addGold( int g )
    {
        gold += g;
        System.out.println( "I have this much gold: " + gold );
    }
    


}
